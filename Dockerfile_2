# Multi-stage build per Typebot
FROM node:18-alpine AS base
RUN apk add --no-cache libc6-compat openssl
WORKDIR /app

# Installa dipendenze globali
FROM base AS deps
COPY package*.json ./
COPY apps/builder/package*.json ./apps/builder/
COPY packages/*/package*.json ./packages/*/
RUN npm install --legacy-peer-deps

# Build dell'applicazione
FROM base AS builder
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Build solo del builder app
RUN npm run build --workspace=apps/builder

# Immagine finale
FROM base AS runner
WORKDIR /app

# Crea utente non-root
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copia i file necessari
COPY --from=builder /app/apps/builder/public ./apps/builder/public
COPY --from=builder --chown=nextjs:nodejs /app/apps/builder/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/apps/builder/.next/static ./apps/builder/.next/static

USER nextjs
EXPOSE 3000
ENV PORT=3000

# Comando di avvio
CMD HOSTNAME="0.0.0.0" node apps/builder/server.js
